<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"> <%=movie.title%></div>
    <div class="ui top attached">
      <div class="item">
        <img class="ui centered rounded image" src="<%= movie.poster %>" alt="">
        <div class="content">
          <label>Year:</label>
          <span><%= movie.year %></span>
        </div>
        <div class="content">
          <label>Director:</label>
          <p><%=movie.director%></p>
        </div>
        <div class="content">
          <label>Rating:</label>

          <p><%=movie.rating%></p>
        </div>
        <a class="ui orange inverted button" href="/movies/<%=movie._id%>/edit">Edit</a>

       <form id="delete" action="/movies/<%=movie._id%>?_method=DELETE" method="post">
          <button class="ui red inverted button">Delete</button>
        </form>
      </div>
    </div>
</div>

<% include ./partials/footer %>
